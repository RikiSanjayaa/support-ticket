# Production Environment Configuration for Docker Deployment

APP_NAME=SupportTicket
APP_ENV=production
APP_KEY=base64:CHANGEME_GENERATE_ME
APP_DEBUG=false
APP_URL=http://your-home-server-ip-or-domain

# Database Configuration (PostgreSQL for production)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=support_ticket
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# Optional: Auto-seed database on first run
# Set to true for first deployment, then change to false
SEED_DATABASE=false

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=warning
